{
    "name": "@trezoa-commerce/sdk",
    "version": "0.1.0",
    "description": "React hooks for Trezoa development",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./react": {
            "types": "./dist/react.d.ts",
            "import": "./dist/react.mjs",
            "require": "./dist/react.js"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "lint": "biome lint src/",
        "test": "vitest",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "@tanstack/react-query": ">=5.0.0"
    },
    "peerDependenciesMeta": {
        "@tanstack/react-query": {
            "optional": true
        }
    },
    "dependencies": {
        "@trezoa-commerce/connector": "workspace:*",
        "@trezoa/kit": "^5.1.0",
        "@trezoa/accounts": "^5.1.0",
        "@trezoa/rpc-types": "^5.1.0",
        "@trezoa-program/compute-budget": "^0.11.0",
        "@trezoa/programs": "^5.1.0",
        "@trezoa-serum/tpl-token": "^0.26.0",
        "@trezoa/transactions": "^5.1.0",
        "@wallet-standard/app": "^1.0.0",
        "@wallet-standard/base": "^1.0.0",
        "@wallet-standard/features": "^1.0.0",
        "trezoagill": "^0.10.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "happy-dom": "^15.10.2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "keywords": [
        "trezoa",
        "react",
        "hooks",
        "blockchain",
        "web3"
    ],
    "license": "MIT"
}
