{
    "name": "@trezoa-commerce/kit",
    "version": "0.1.1",
    "description": "Comprehensive Trezoa Commerce SDK - All-in-one package for Trezoa e-commerce solutions",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@trezoa-commerce/connector": "workspace:*",
        "@trezoa-commerce/headless": "workspace:*",
        "@trezoa-commerce/react": "workspace:*",
        "@trezoa-commerce/sdk": "workspace:*",
        "@trezoa-commerce/trezoa-pay": "workspace:*"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    },
    "keywords": [
        "trezoa",
        "commerce",
        "payment",
        "crypto",
        "e-commerce",
        "blockchain",
        "web3",
        "react",
        "sdk"
    ],
    "license": "MIT"
}
